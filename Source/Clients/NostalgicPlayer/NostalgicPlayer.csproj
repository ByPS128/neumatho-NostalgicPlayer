<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>Polycode.NostalgicPlayer.Client.GuiPlayer</RootNamespace>
    <Description>Music player with an user interface</Description>
    <Company>Polycode</Company>
    <Authors>Thomas Neumann</Authors>
    <Copyright>Copyright © 2021</Copyright>
    <ApplicationIcon>App.ico</ApplicationIcon>
    <Version>1.2.0</Version>
    <Platforms>x64;x86</Platforms>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86'">
    <OutputPath></OutputPath>
    <DocumentationFile>bin\NostalgicPlayer.xml</DocumentationFile>
    <RuntimeIdentifier>win-x86</RuntimeIdentifier>
    <SelfContained>false</SelfContained>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <OutputPath></OutputPath>
    <DocumentationFile>bin\NostalgicPlayer.xml</DocumentationFile>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>false</SelfContained>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x86'">
    <OutputPath></OutputPath>
    <DocumentationFile>bin\NostalgicPlayer.xml</DocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <RuntimeIdentifier>win-x86</RuntimeIdentifier>
    <SelfContained>true</SelfContained>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
    <OutputPath></OutputPath>
    <DocumentationFile>bin\NostalgicPlayer.xml</DocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>true</SelfContained>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /Y $(SolutionDir)NostalgicPlayerLibrary_Native\bin\$(PlatformName)\$(ConfigurationName) $(TargetDir)&#xD;&#xA;" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Krypton.Navigator.Lite" Version="5.550.2106.1" />
    <PackageReference Include="Krypton.Toolkit.Lite" Version="5.550.2106.1" />
  </ItemGroup>

  <ItemGroup>
